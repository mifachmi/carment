<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="36dp"
    tools:context=".view.SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="splash_screen_car.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/txt_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARMENT\nCar Damage Assessment"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_splash_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>