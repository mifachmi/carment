<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UserGuideFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <TextView
            android:id="@+id/tv_user_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Informasi Penting"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_user_guide">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merk Mobil"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Contohnya:\n\nChevrolet, Daihatsu, Datsun, Honda, Hyundai, Kia, Mazda, Mitsubishi, Nissan, Suzuki, Toyota, Wuling"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Model Mobil"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Contohnya:\n\nHonda: Brio, Civic, Freed, HR-V, Jazz.\nMitsubishi: Mirage, Pajero Sport, Xpander.\nToyota: Avanza, Agya, Fortuner, Yaris, Rush, Kijang Innova.\ndll."
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Varian Mobil"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Contohnya:\n\nHonda Jazz: RS, S, RS CVT, S CVT.\nMitsubishi Xpander: Exceed, GLS, GLX, Sport.\nToyota Avanza: E, G, Veloz.\ndll."
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>